import java.util.Scanner;

class Main {
    public static void main(String[] args) {
        Scanner num =new Scanner(System.in);
        
        System.out.println("enter a number");
        int n=num.nextInt();
        int s=0;
        while(n>0)
        {
            int k=n%10;
            s=s+k;
            n=n/10;
            
            
        }
        System.out.println("the sum is"+s);
}
}
